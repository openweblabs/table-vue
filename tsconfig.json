{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "composite": false,
    "incremental": false,
    "declaration": true, // temporary disabled until this is merged: https://github.com/vuejs/core/pull/5831
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true, // TODO: look into removing this
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "dist",
    "types": [
      "vite/client",
      "vue/macros-global",
      "node"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "cypress"
  ]
}
